{
	"compilerOptions": {
		"target": "esnext",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"~/*": ["./lib/*"]
		},
		"plugins": [{ "name": "next" }],
		"skipLibCheck": true
	},
	"extends": "@rubriclab/config/tsconfig",
	"include": [
		"./app/**/*.ts",
		"./app/**/*.tsx",
		"./lib/**/*.ts",
		"./lib/**/*.tsx",
		"./common/**/*.ts",
		"./common/**/*.tsx",
		"./components/**/*.ts",
		"./components/**/*.tsx",
		"./context/**/*.ts",
		"./context/**/*.tsx",
		"./hooks/**/*.ts",
		"./hooks/**/*.tsx",
		"./utils/**/*.ts",
		"./next-env.d.ts",
		"sanity.cli.ts",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
