{
	"compilerOptions": {
		"target": "ESNext",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"~/*": ["./lib/*"]
		},
		"plugins": [{ "name": "next" }]
	},
	"extends": "@rubriclab/config/tsconfig",
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"./app/**/*.ts",
		"./app/**/*.tsx",
		"./lib/**/*.ts",
		"./lib/**/*.tsx",
		".next/types/**/*.ts",
		"next-env.d.ts",
		"sanity.cli.ts"
	],
	"exclude": ["node_modules"]
}
